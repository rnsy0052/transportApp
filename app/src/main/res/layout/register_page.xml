<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/headingLoginDetail"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/headingManagerDetail"
        android:layout_alignParentTop="true"
        android:text="Login Details"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/headingManagerDetail"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/headingLoginDetail"
        android:layout_toRightOf="@+id/headingLoginDetail"
        android:text="Supervisor Details"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/headingPersonalDetail"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/headingManagerDetail"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/headingManagerDetail"
        android:layout_toRightOf="@+id/headingManagerDetail"
        android:text="Personal Details"
        android:textAlignment="center" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headingLoginDetail" />





</RelativeLayout>
